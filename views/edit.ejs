<%- include("./partials/header") %>
<h2>Edit <%= edit.name%></h2>
<form action="/<%= edit.id%>?_method=PUT" method="POST">
    <div class="form-style">
        <label>Name</label>
        <input type="text" name="update[name]" value="<%= edit.name%>">
        <label>Price</label>
        <input type="text" name="update[price]" value="<%= edit.price%>">
        <label>Image</label>
        <div class="image1">
            <img src= "<%= edit.image[0]%>" alt="<%= edit.name%>" height="auto" width="100%">
        </div>
        <div class="image1">
            <img src= "<%= edit.image[1]%>" alt="<%= edit.name%>" height="auto" width="100%">
        </div>
        <div class="image1">
            <img src= "<%= edit.image[2]%>" alt="<%= edit.name%>" height="auto" width="100%">
        </div>
        
        <label>product's description</label>
        <textarea name="update[description]"><%= edit.description%></textarea> 
        <button>Update</button>
    </div>
</form>